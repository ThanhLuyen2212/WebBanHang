<header class="header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-3 col-lg-2">
                <div class="header__logo">
                    <a href="~/Home/Index">
                        <img src="~/Images/desktop-computer.png" width="40px" style="display:inline-block; padding-right:10px;margin-left:30px" />
                        <h4 style="font-style:initial ;display:inline-block">Online shop</h4>
                    </a>
                </div>
            </div>
            <div class="col-xl-6 col-lg-7" >
                <nav class="header__menu" style="margin-left:300px">
                    <ul>
                        <li><a href="~/Home/index">Home</a></li>
                        <li><a href="~/Shop/Index">Các sản phẩm</a></li>
                       
                        <li><a href="~/GioHang/show">Giỏ hàng</a></li>
                        
                    </ul>
                </nav>
            </div>
            <div class="col-lg-3">
                <div class="header__right" style="margin-right:50px">



                    @if (Session["UserName"] == null)
                    {



                        <div class="header__right__auth">
                            <a href="~/Login/Index">Login</a>
                            <a href="~/Register/Index">Register</a>
                        </div>
                    }
                    else
                    {
                        <div class="header__right__auth">
                            <div class="dropdown">
                                <button class="dropbtn"></button>
                                <div class="dropdown-content">
                                    <a href="~/Login/Index">Logout</a>

                                </div>
                            </div>
                        </div>
                    }


                    @if (Session["SoLuongHangTrongGioHang"] != null)
                    {
                        <ul class="header__right__widget">

                            <li>
                                <a href="~/GioHang/show">
                                    <span class="icon_bag_alt"></span>
                                    <div class="tip">@Session["SoLuongHangTrongGioHang"]</div>
                                </a>
                            </li>
                        </ul>
                    }




                </div>
            </div>
        </div>
        <div class="canvas__open">
            <i class="fa fa-bars"></i>
        </div>
    </div>
</header>


<style>
    /* Dropdown Button */
    .dropbtn {
        background-image : url("Images/user.png");      
        background-color:white;
        padding: 16px;
        font-size: 16px;
        border: none;
    }

    /* The container <div> - needed to position the dropdown content */
    .dropdown {
        position: relative;
        display: inline-block;
    }

    /* Dropdown Content (Hidden by Default) */
    .dropdown-content {
        display: none;
        position: absolute;
        background-color: #f1f1f1;       
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        z-index: 1;
    }

        /* Links inside the dropdown */
        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

            /* Change color of dropdown links on hover */
            .dropdown-content a:hover {
                background-color: floralwhite;
            }

    /* Show the dropdown menu on hover */
    .dropdown:hover .dropdown-content {
        display: block;
    }

    /* Change the background color of the dropdown button when the dropdown content is shown */
    .dropdown:hover .dropbtn {
        background-color: floralwhite;
    }
</style>