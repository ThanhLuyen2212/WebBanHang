@using WebBanHang.Models;

@{
    ViewBag.Title = "Home Page";
    List<MatHang> banner = ViewBag.banner;
    List<MatHang> newProduct = ViewBag.newProduct;
}

<!-- Banner Section Begin -->
<section class="banner set-bg" style="background-image: url(@Url.Content("~/Assets/img/banner/banner-2.png"))">
    <div class="container">
        <div class="row">
            <div class="col-xl-7 col-lg-8 m-auto">
                <div class="banner__slider owl-carousel">

                    @* lay 3 san pham moi nhat*@

                    @foreach (MatHang item in banner)
                    {                       
                        <div class="banner__item">
                            <div class="banner__text">
                                <span>Đâu là sự lựa chọn tốt nhất</span>
                                <h1>@item.TenMH</h1>
                                <a href="~/ChiTietSanPham/Index/@item.IDMH">Shop now</a>
                            </div>
                        </div>
                            
                    }

                    </div>
            </div>
        </div>
    </div>
</section>
<!-- Banner Section End -->
<!-- Product Section Begin -->
<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-4">
                <div class="section-title" style="width:500px">
                    <h3 >Những sản phẩm mới nhất</h3>
                </div>
            </div>           
        </div>



        <div class="row property__gallery">
            @foreach (MatHang item in newProduct)
            {
                <a href="~/ChiTietSanPham/Index/@item.IDMH">
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="product__item">
                            <div class="product__item__pic set-bg" style="background-image: url(@Url.Content(item.HinhAnh1))">
                               
                            </div>
                            <div class="product__item__text">
                                <h6><a href="#">@item.TenMH</a></h6>
                                <div class="product__price money">@item.DonGia VND</div>
                            </div>
                        </div>
                    </div>
                 </a>
             }
            </div>
    </div>
</section>
<!-- Product Section End -->
