
@using WebBanHang.Models
@model WebBanHang.Models.HoaDon
@{
    ViewBag.Title = "XacNhan";
    Layout = "~/Views/Shared/_Layout.cshtml";
    HoaDon hoaDon = (HoaDon)Session["HoaDon"];
    KhachHang khachHang = (KhachHang)Session["KhachHang"];
    GioHang gioHang = (GioHang)Session["GioHang"];
}

@using (Html.BeginForm("XacNhan", "XacNhanDonHang"))
{
    @Html.AntiForgeryToken()
    <!-- Checkout Section Begin -->
    <section class="checkout spad">
        <div class="container">
            <h3 style="margin-bottom:50px">Chi tiết hóa đơn</h3>
            <form action="#" class="checkout__form">
                <div class="row">
                    <div class="col-lg-6">

                        <div class="row">
                            <div class="col-lg-12">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.IDHD)
                                <div class="checkout__form__input">
                                    <p>Họ tên khách hàng</p>                                   
                                    <input type="text" name="TenKH" value="@khachHang.TenKH"  style="padding:3px 300px 3px 3px">                                    
                                </div>
                                <div class="checkout__form__input">
                                    <p>Địa chỉ</p>
                                    <input type="text" name="DiaChi" value="@khachHang.DiaChi" style="padding:3px 300px 3px 3px">
                                </div>
                                <div class="checkout__form__input">
                                    <p>Email</p>
                                    <input type="text" name="Email" value="@khachHang.Email" style="padding:3px 300px 3px 3px">
                                </div>
                                <div class="checkout__form__input">
                                    <p>Số điện thoại</p>
                                    <input type="text" name="SDT" value="@khachHang.SDT" style="padding:3px 300px 3px 3px" >
                                </div>
                                <div class="checkout__form__input">
                                    <p>Ngày mua</p>
                                    
                                    @Html.EditorFor(model => model.NgayMua, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.NgayMua, "", new { @class = "text-danger" })
                                </div>
                                <div class="checkout__form__input">
                                    <p>Phương thức thanh toán</p>
                                    @Html.DropDownList("IDPT", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.IDTrangThai, "", new { @class = "text-danger" })

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="checkout__order">
                            <h5>Chi tiết các sản phẩm</h5>
                            <div class="checkout__order__product">
                                <ul>
                                    <li>
                                        <span class="top__text">Tên sản phẩm</span>
                                        <span class="top__text__right">ĐG/SP</span>
                                        <span class="top__text__right" style="margin-right:50px">Số lượng</span>
                                    </li>
                                    @foreach (var item in gioHang.ListHang)
                                    {
                                        <li>
                                            @item.gioHang.TenMH
                                            <span>@item._soLuongHang</span>
                                            <span style="margin-right:100px">@item.gioHang.DonGia</span>
                                        </li>

                                    }

                                </ul>
                            </div>
                            <div class="checkout__order__total">
                                <ul>
                                    <li>Tổng cộng <span>@hoaDon.TongTien</span></li>
                                </ul>
                            </div>

                            <button type="submit" value="Đặt hàng" class="site-btn">Đặt hàng</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>
    <!-- Checkout Section End -->

}
