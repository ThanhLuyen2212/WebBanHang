@model IEnumerable<WebBanHang.Models.ChiTietHoaDon>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Danh sách chi tiết các sản phẩm trong hóa đơn</h2>

            <a href="~/Admin/AdminChiTietHoaDons/Create">
                <button type="button" class="btn btn-primary btn-fw">Tạo một chi tiết hóa đơn mới</button>
            </a>

            <div class="table-responsive">

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th style="color:white">
                                ID hóa đơn
                            </th>
                            <th style="color:white">
                                Tên mặt hàng
                            </th>
                            <th style="color:white">
                                Số lượng
                            </th>                            
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HoaDon.IDHD)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MatHang.TenMH)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SoluongMH)
                                </td>                                
                                <td>
                                    <a href="~/Admin/AdminChiTietHoaDons/Details/@item.IDChiTietHD">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-success btn-fw">Details</button>
                                    </a>
                                    <a href="~/Admin/AdminChiTietHoaDons/Edit/@item.IDChiTietHD">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-warning btn-fw">Edit</button>
                                    </a>
                                    <a href="~/Admin/AdminChiTietHoaDons/Delete/@item.IDChiTietHD">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-danger btn-fw">Delete</button>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>